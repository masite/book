<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/cover_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hongguo.read.widget.CommonImageView
            android:id="@+id/book_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_image_normal_default" />

        <ImageView
            android:id="@+id/selection_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:visibility="gone"
            android:src="@drawable/sr_circle_check" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/book_update"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/bg_circle_shape"
            skin:enable="true"
            tools:ignore="MissingPrefix"
            android:visibility="visible" />

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="路的没出息奥"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_info" />
    </LinearLayout>

    <TextView
        android:id="@+id/read_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:text="未读"
        android:textColor="#999999"
        android:textSize="12sp" />

</LinearLayout>
