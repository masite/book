<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/common_margin">

    <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:text="TextView in CardView"
        android:textColor="@color/book_list_title_color"
        android:textStyle="bold"
        android:textSize="@dimen/book_list_title_size"/>

    <TextView
        android:id="@+id/book_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lineSpacingExtra="3sp"
        android:maxLines="2"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:text="TextView in CardViewTextView inardVi in CardViewTextView in CardView"
        android:textColor="@color/book_list_describe_color"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        >

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sr_circle_accent_button"
            skin:enable="true"
            tools:ignore="MissingPrefix"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:textColor="@color/base_white"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/sr_circle_accent_button"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            skin:enable="true"
            tools:ignore="MissingPrefix"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="青春"
            android:textColor="@color/base_white"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/book_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/sr_circle_accent_button"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="2dp"
            skin:enable="true"
            tools:ignore="MissingPrefix"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="字数"
            android:textColor="@color/base_white"
            android:textSize="10sp"/>

    </LinearLayout>

    <include layout="@layout/view_line"/>

</LinearLayout>