<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_color">

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:background="@color/base_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableLeft="@mipmap/ic_username"
        android:drawablePadding="@dimen/row_spacing"
        android:gravity="center"
        android:text="账号"
        android:textColor="#555555"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        android:hint="请输入账号"
        android:minHeight="@dimen/middle_button_height"
        android:textColor="#555555"
        android:textColorHint="#b88f8f8f"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/clear_user_name"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <ImageView
        android:id="@+id/clear_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/middle_button_height"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        app:layout_constraintBottom_toBottomOf="@+id/user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_name"
        app:srcCompat="@mipmap/ic_edit_delete" />


    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="1px"
        android:background="@color/base_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableLeft="@mipmap/ic_password"
        android:drawablePadding="@dimen/row_spacing"
        android:gravity="center"
        android:text="密码"
        android:textColor="#555555"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <ImageView
        android:id="@+id/change_password_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/middle_button_height"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:src="@drawable/sr_change_edit_show"
        app:layout_constraintBottom_toBottomOf="@+id/user_password"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/user_password" />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:minHeight="@dimen/middle_button_height"
        android:textColor="#555555"
        android:textColorHint="#b88f8f8f"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/change_password_show"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />


    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/middle_button_height"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_round_primary"
        android:gravity="center"
        android:minHeight="@dimen/big_button_height"
        android:text="登录"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        skin:enable="true"
        tools:ignore="MissingPrefix" />


    <TextView
        android:id="@+id/three_author"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@mipmap/ic_login_left_line"
        android:drawablePadding="@dimen/row_spacing"
        android:drawableRight="@mipmap/ic_login_right_line"
        android:gravity="center"
        android:text="第三方账号登录"
        android:textColor="#969696"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/space"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="158dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three_author" />

    <ImageView
        android:id="@+id/qq_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_author_qq"
        app:layout_constraintBottom_toTopOf="@+id/qq_text"
        app:layout_constraintEnd_toStartOf="@+id/weixin_logo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/space"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/weixin_logo"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_author_weixin"
        app:layout_constraintBottom_toBottomOf="@+id/qq_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/qq_logo"
        app:layout_constraintTop_toTopOf="@+id/qq_logo"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/qq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:drawablePadding="@dimen/line_space"
        android:gravity="center"
        android:paddingTop="@dimen/row_spacing"
        android:text="QQ"
        android:textColor="#969696"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintEnd_toEndOf="@+id/qq_logo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/qq_logo"
        app:layout_constraintTop_toBottomOf="@+id/qq_logo" />

    <TextView
        android:id="@+id/weixin_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:drawablePadding="@dimen/line_space"
        android:gravity="center"
        android:paddingTop="@dimen/row_spacing"
        android:text="微信"
        android:textColor="#969696"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/qq_text"
        app:layout_constraintEnd_toEndOf="@+id/weixin_logo"
        app:layout_constraintStart_toStartOf="@+id/weixin_logo"
        app:layout_constraintTop_toTopOf="@+id/qq_text" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:lineSpacingExtra="@dimen/row_spacing"
        android:text="1、网页端自由注册用户与客户端数据互通，可以直接登录。\n2、微信公众号与客户端数据互通，可以直接登录。\n3、网页端第三方QQ授权用户数据暂不互通，敬请谅解。"
        android:textColor="#969696"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>