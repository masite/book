<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:orientation="vertical">

    <include layout="@layout/adapter_item_row_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/big_button_height"
        android:paddingLeft="@dimen/common_margin"
        android:text="书友还看过"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_title" />

    <com.hongguo.read.widget.CommonThreeItem
        android:id="@+id/free_items"
        android:layout_marginBottom="@dimen/row_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/view_line" />

    <TextView
        android:id="@+id/change_similar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/big_button_height"
        android:text="换一批"
        android:textColor="@color/colorPrimary" />

</LinearLayout>