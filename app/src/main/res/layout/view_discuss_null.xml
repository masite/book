<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/base_white"
    android:padding="@dimen/common_margin">

    <LinearLayout
        android:id="@+id/write_discuss"
        android:paddingTop="@dimen/row_spacing"
        android:paddingBottom="@dimen/row_spacing"
        android:background="#05000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:drawablePadding="@dimen/common_margin"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_no_discuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来说说说自己的感受吧"
            android:textSize="@dimen/text_size_info"
            android:textColor="#999999"
            />

    </LinearLayout>

</LinearLayout>