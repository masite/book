<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/row_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sr_common_list_white_bg"
        android:minHeight="50dp"
        android:paddingLeft="16dp"
        android:visibility="gone"
        android:paddingRight="@dimen/row_spacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="夜间模式"
            android:textColor="#333333"
            android:textSize="14sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:theme="@style/SwitchTheme" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sr_common_list_white_bg"
        android:minHeight="50dp"
        android:layout_marginTop="1px"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:paddingRight="@dimen/row_spacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="音量翻页"
            android:textColor="#333333"
            android:textSize="14sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_vol_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:theme="@style/SwitchTheme" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sr_common_list_white_bg"
        android:minHeight="50dp"
        android:paddingLeft="16dp"
        android:visibility="gone"
        android:layout_marginTop="1px"
        android:paddingRight="@dimen/row_spacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="自动更新"
            android:textColor="#333333"
            android:textSize="14sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/auto_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:theme="@style/SwitchTheme" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:background="@drawable/sr_common_list_white_bg"
        android:layout_marginTop="@dimen/row_spacing"
        android:minHeight="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#aeaeae"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/version_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@drawable/sr_common_list_white_bg"
        android:minHeight="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="版本更新"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/current_verion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#aeaeae"
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="NEW"
            android:textColor="#ff0000"
            android:textSize="8sp"
            android:rotation="30"
            android:visibility="gone"
            android:id="@+id/new_version_mark" />

    </RelativeLayout>

    <TextView
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@drawable/sr_common_list_white_bg"
        android:drawableRight="@mipmap/ic_right_dark_arrow"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="关于我们"
        android:textColor="#333333"
        android:textSize="14sp" />

</LinearLayout>