<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/view_recommend_common_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin">

        <com.hongguo.read.widget.CommonImageView
            android:id="@+id/book_image"
            android:layout_width="@dimen/image_big_width"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="TextView in CardView"
                android:textStyle="bold"
                android:textColor="@color/book_list_title_color"
                android:textSize="@dimen/book_list_title_size"/>

            <TextView
                android:id="@+id/book_describe"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="top"
                android:ellipsize="end"
                android:lineSpacingExtra="3sp"
                android:maxLines="3"
                android:text="TextView in CardViewTextView inardVi in CardViewTextView in CardView"
                android:textColor="@color/book_list_describe_color"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_spacing"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/book_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/sr_circle_accent_button"
                    skin:enable="true"
                    tools:ignore="MissingPrefix"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="青春"
                    android:textColor="@color/base_white"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/sr_circle_accent_button"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    skin:enable="true"
                    tools:ignore="MissingPrefix"
                    android:text="作者"
                    android:textColor="@color/base_white"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/book_words"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/sr_circle_accent_button"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    skin:enable="true"
                    tools:ignore="MissingPrefix"
                    android:paddingTop="2dp"
                    android:text="字数"
                    android:textColor="@color/base_white"
                    android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>