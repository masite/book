<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.hongguo.read.widget.BookBackgroundSelectorView
        android:id="@+id/background_selector"
        android:layout_width="@dimen/middle_button_height"
        android:layout_height="@dimen/middle_button_height"
        android:layout_marginRight="@dimen/common_margin" />

    <ImageView
        android:id="@+id/back_selected"
        android:layout_width="@dimen/middle_button_height"
        android:layout_height="@dimen/middle_button_height"
        android:layout_marginRight="@dimen/common_margin"
        android:src="@mipmap/ic_book_back_selected"
        android:visibility="gone"
        />

</FrameLayout>