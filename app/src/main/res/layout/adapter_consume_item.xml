<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_white_with_line"
    android:minHeight="@dimen/item_height">

    <TextView
        android:id="@+id/create_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2013-12-12 12:15:30"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_hint" />

    <View
        android:id="@+id/view"
        android:layout_width="1px"
        android:layout_height="25dp"
        android:layout_marginEnd="@dimen/line_space"
        android:layout_marginStart="@dimen/line_space"
        android:background="#e5e5e5" />

    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text="第88章 xxds xxxx"
        android:textColor="#666666"
        android:textSize="12sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="1px"
        android:layout_height="25dp"
        android:layout_marginEnd="@dimen/line_space"
        android:layout_marginStart="@dimen/line_space"
        android:background="#e5e5e5" />

    <TextView
        android:id="@+id/consume_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="-100 红果币"
        android:textColor="#666666"
        android:textSize="12sp" />

</LinearLayout>