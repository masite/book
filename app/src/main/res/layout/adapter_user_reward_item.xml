<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/reward_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_reward_coin188"
            android:visibility="visible" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_reward_coin1888_selected"
            android:visibility="invisible" />


    </FrameLayout>

    <TextView
        android:id="@+id/reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_space"
        android:text="超喜欢"
        android:textColor="@color/cr_user_reward_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/reward_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_space"
        android:background="@drawable/bg_user_reward_money"
        android:drawableLeft="@mipmap/ic_coin"
        android:drawablePadding="@dimen/row_spacing"
        android:gravity="center"
        android:paddingRight="@dimen/row_spacing"
        android:text="50元"
        android:textColor="#ff0f0f"
        android:textSize="9sp" />
</LinearLayout>