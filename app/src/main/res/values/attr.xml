<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--导航-->
    <declare-styleable name="MenuContenter">
        <attr name="Menu_textSize" format="dimension" />
        <attr name="Menu_Color" format="color" />
        <attr name="Menu_menuPadding" format="dimension" />
        <attr name="Menu_menuMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TriangleView">
        <attr name="position" format="dimension" />
        <attr name="imageSize" format="dimension" />
    </declare-styleable>


    <declare-styleable name="WaveView">
        <attr name="color_one" format="color"/>
        <attr name="color_two" format="color"/>
        <attr name="color_three" format="color"/>
    </declare-styleable>

    <declare-styleable name="CollapsibleTextView">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="text" format="string" />
        <attr name="maxLines" format="integer" />
    </declare-styleable>

    <declare-styleable name="BannerLayoutStyle">
        <attr name="selectedIndicatorColor" format="color|reference" />
        <attr name="unSelectedIndicatorColor" format="color|reference" />
        <attr name="indicatorShape" format="enum">
            <enum name="rect" value="0" />
            <enum name="oval" value="1" />
        </attr>
        <attr name="selectedIndicatorHeight" format="dimension|reference" />
        <attr name="selectedIndicatorWidth" format="dimension|reference" />
        <attr name="unSelectedIndicatorHeight" format="dimension|reference" />
        <attr name="unSelectedIndicatorWidth" format="dimension|reference" />
        <attr name="indicatorPosition" format="enum">
            <enum name="centerBottom" value="0" />
            <enum name="rightBottom" value="1" />
            <enum name="leftBottom" value="2" />
            <enum name="centerTop" value="3" />
            <enum name="rightTop" value="4" />
            <enum name="leftTop" value="5" />
        </attr>
        <attr name="indicatorSpace" format="dimension|reference" />
        <attr name="indicatorMargin" format="dimension|reference" />
        <attr name="autoPlayDuration" format="integer|reference" />
        <attr name="scrollDuration" format="integer|reference" />
        <attr name="isAutoPlay" format="boolean" />
        <attr name="defaultImage" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="AutoLineLabelView">
        <attr name="label_textSize" format="dimension" />
        <attr name="label_backgroundResource" format="reference" />
        <attr name="label_margin" format="dimension" />
        <attr name="label_textColor" format="color" />
        <attr name="label_minWidth" format="dimension" />
        <attr name="label_maxLine" format="integer" />
        <attr name="label_textStatusColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="CropImageView">
        <attr name="cropMaskColor" format="color" />
        <attr name="cropBorderColor" format="color" />
        <attr name="cropBorderWidth" format="dimension" />
        <attr name="cropFocusWidth" format="dimension" />
        <attr name="cropFocusHeight" format="dimension" />
        <attr name="cropStyle" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="circle" value="1" />
        </attr>
    </declare-styleable>

    <!--图片点击背景切换的颜色-->
    <declare-styleable name="PressImageView">
        <attr name="image_color_list" format="reference"/>
        <attr name="image_imageChange" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="WaterDropView">
        <attr name="max_circle_radius" format="dimension" />
        <attr name="min_circle_radius" format="dimension" />
        <attr name="waterdrop_color" format="color" />
        <attr name="topcircle_x" format="dimension" />
        <attr name="topcircle_y" format="dimension" />
        <attr name="bottomcircle_x" format="dimension" />
        <attr name="bottomcircle_y" format="dimension" />
    </declare-styleable>

</resources>