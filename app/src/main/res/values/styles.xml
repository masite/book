<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_color</item>
        <item name="android:windowAnimationStyle">@style/default_animation</item>
    </style>

    <style name="default_animation" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_stay</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_out_from_left</item>
    </style>

    <style name="MainTheme" parent="BaseTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="ReaderStyle" parent="BaseTheme">
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/base_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="BaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@mipmap/ic_loading</item>
    </style>

    <style name="LoadingTheme" parent="BaseTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BookShelfDeleteAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_out_to_bottom</item>
    </style>

    <style name="PayTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/base_transparent</item>
        <item name="colorPrimaryDark">@color/base_transparent</item>
    </style>

    <style name="RechargeDialog" parent="MessageDialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>

    <style name="SwitchTheme" parent="AppTheme">
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">#999999</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="FullWidthDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/base_transparent</item>
        <item name="android:windowFrame">@color/base_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowAnimationStyle">@style/BottomAnimation</item>
    </style>


    <style name="ReadModePanel" parent="FullWidthDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/BottomAnimationFast</item>
    </style>

    <style name="BottomAnimationFast" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_in_from_bottom_fast</item>
        <item name="android:windowExitAnimation">@anim/anim_out_to_bottom_fast</item>
    </style>

    <style name="BottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_out_to_bottom</item>
    </style>


</resources>
